<div class="container">
  <h1>Welkom, <%= user.email %></h1>
  <form method="POST" action="/post">
    <textarea name="content" placeholder="Wat wil je zeggen?" required></textarea>
    <button type="submit">Post</button>
  </form>

  <% posts.forEach(post => { %>
    <div>
      <p><strong><%= post.email %>:</strong> <%= post.content %></p>
      <form method="POST" action="/like/<%= post.id %>">
        <button type="submit">❤️ Like</button>
      </form>
      <form method="POST" action="/comment/<%= post.id %>">
        <input name="content" placeholder="Comment..." required>
        <button type="submit">Reageren</button>
      </form>
      <div>
        <% post.comments.forEach(c => { %>
          <p><%= c.email %>: <%= c.content %></p>
        <% }) %>
      </div>
    </div>
  <% }) %>

  <a href="/logout">Uitloggen</a>
  <% if (user.is_admin) { %> <a href="/admin">Admin</a> <% } %>
</div>
