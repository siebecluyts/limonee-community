<div class="container">
  <h1>Admin Dashboard</h1>
  <% users.forEach(u => { %>
    <div>
      <p><%= u.email %> <% if (u.is_admin) { %> (admin) <% } %></p>
      <% if (!u.is_admin) { %>
        <form method="POST" action="/make-admin/<%= u.id %>">
          <button type="submit">Maak admin</button>
        </form>
      <% } %>
    </div>
  <% }) %>
  <a href="/dashboard">â† Terug</a>
</div>
